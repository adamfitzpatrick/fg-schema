{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://stepinto.io/fg-schema/meta-schema",
  "$vocabulary": {
    "https://json-schema.org/draft/2020-12/vocab/core": true
  },
  "title": "FantasyGrounds Schema meta-schema",
  "type": "object",
  "properties": {
    "xml": {
      "$ref": "#/$defs/XmlTag"
    }
  },
  "$defs": {
    "XmlTag": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "encoding": {
          "type": "string"
        }
      }
    },
    "TagDefinition": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "attribute": {
          "type": "object"
        },
        "content": {
          "type": "object"
        }
      }
    }
  }
}
