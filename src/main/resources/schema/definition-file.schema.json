{
  "$id": "https://stepinto.io/fg-schema/definition-file.schema.json",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "DefinitionFile schema",
  "type": "object",
  "xml": {
    "version": "1.0",
    "encoding": "ISO-8859-1"
  },
  "properties": {
    "root": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "author": { "type": "string" },
        "ruleset": { "type": "string" },
        "displayname":  { "type": "string" }
      },
      "required": [
        "name",
        "author",
        "ruleset",
        "displayname"
      ]
    }
  },
  "required": [
    "root"
  ]
}